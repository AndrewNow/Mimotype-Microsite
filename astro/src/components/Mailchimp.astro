---
import Crustacean from "../svg/crustacean.astro";
---

<!-- Begin Mailchimp Signup Form -->
<div id="mc_embed_signup">
  <form
    action="https://mimotype.us17.list-manage.com/subscribe/post?u=f12a49713f2b8fffa5a2a5870&id=113a135fd8&f_id=00be5ce0f0"
    method="post"
    id="mc-embedded-subscribe-form"
    name="mc-embedded-subscribe-form"
    class="validate"
    target="_blank"
    novalidate
  >
    <div id="mc_embed_signup_scroll">
      <h1>Join our Newsletter</h1>
      <h6>
        Enter your email below to stay up to date with our latest research
        findings, roadmap and more.
      </h6>
      <div class="mc-field-group">
        <div class="inputContainer">
          <div class="textInputWrapper">
            <input
              type="email"
              value=""
              name="EMAIL"
              class="emailInput required email"
              id="mce-EMAIL"
              required
            />
            <span id="mce-EMAIL-HELPERTEXT" class="helperText"></span>
          </div>
          <span class="subscribeButtonWrapper">
            <input
              type="submit"
              value=""
              name="subscribe"
              id="mc-embedded-subscribe"
              class="subscribeButton"
            />
            <svg
              class="arrowSVG"
              width="14"
              height="14"
              viewBox="0 0 14 14"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                vector-effect="non-scaling-stroke"
                d="M3.07691 0.547852V1.81287H11.0402L0.546875 12.3062L1.43871 13.198L11.932 2.70471V10.668H13.1971V0.547852H3.07691Z"
                fill="#463F2E"></path>
            </svg>
            <svg
              class="arrowSVG hiddenArrow"
              width="14"
              height="14"
              viewBox="0 0 14 14"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                vector-effect="non-scaling-stroke"
                d="M3.07691 0.547852V1.81287H11.0402L0.546875 12.3062L1.43871 13.198L11.932 2.70471V10.668H13.1971V0.547852H3.07691Z"
                fill="#463F2E"></path>
            </svg>
          </span>
        </div>
      </div>

      <div id="mce-responses" class="clear foot">
        <div class="response" id="mce-error-response" style="display:none">
        </div>
        <div class="response" id="mce-success-response" style="display:none">
        </div>
      </div>
      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
      <div style="position: absolute; left: -5000px;" aria-hidden="true">
        <input
          type="text"
          name="b_f12a49713f2b8fffa5a2a5870_113a135fd8"
          tabindex="-1"
          value=""
        />
      </div>
    </div>
  </form>
  <div class="crustaceanWrapper">
    <Crustacean />
  </div>
</div>
<script
  type="text/javascript"
  src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"
></script>

<script type="text/javascript">
  (function ($) {
    window.fnames = new Array();
    window.ftypes = new Array();
    fnames[0] = "EMAIL";
    ftypes[0] = "email";
    fnames[1] = "FNAME";
    ftypes[1] = "text";
    fnames[2] = "LNAME";
    ftypes[2] = "text";
    fnames[3] = "ADDRESS";
    ftypes[3] = "address";
    fnames[4] = "PHONE";
    ftypes[4] = "phone";
    fnames[5] = "BIRTHDAY";
    ftypes[5] = "birthday";
  })(jQuery);
  var $mcj = jQuery.noConflict(true);
</script>

<style lang="scss">
  #mc_embed_signup {
    overflow: hidden;
    position: relative;
    z-index: 1;
    width: var(--page-width);
    max-width: var(--max-page-width);
    margin: 0 auto;
    margin-top: 10rem;
    background: var(--color-green-dark);
    border: 1px solid rgba(201, 255, 132, 0.25);
    color: var(--color-green-light);
    border-radius: 30px;
    padding: 5rem 6rem;

    h1 {
      margin-bottom: 2rem;
    }
    h6 {
      max-width: 35%;
      margin: 0;
      font-family: "Allnce-Text-Regular", Arial, Helvetica, sans-serif;
      font-size: 20px;
      font-weight: 100;
      line-height: 150%;
    }
  }
  .crustaceanWrapper {
    position: absolute;
    z-index: 0;
    aspect-ratio: 973/393.33;
    width: 60%;
    max-width: 60%;
    height: auto;
    bottom: 5%;
    right: 5%;
  }
  .inputContainer {
    width: 45%;
    padding-top: 7rem;
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--color-green-light);
    .subscribeButtonWrapper {
      aspect-ratio: 1/1;
      width: 40px;
      height: 40px;
      border-radius: 100%;
      background: var(--color-green-light);
      position: absolute;
      right: 0;
      bottom: 0.8rem;
      overflow: hidden;
      transition: var(--hover-arrow-transition);

      .subscribeButton {
        cursor: pointer;
        width: 100%;
        height: 100%;
        position: relative;
        z-index: 2;
        background: unset;
        border: unset;
      }
      .arrowSVG {
        transition: var(--hover-arrow-transition);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 35%;
        height: 35%;
        z-index: 0;
      }
      .hiddenArrow {
        transform: translate(-50px, 50px);
      }
    }

    .subscribeButtonWrapper:hover {
      transition: var(--hover-transition);
      cursor: pointer;
      .arrowSVG {
        transform: translate(50px, -50px);
      }
      .hiddenArrow {
        transform: translate(-50%, -50%);
      }
    }
    .textInputWrapper {
      width: 80%;
      height: 60px;
      margin-top: 1rem;
      margin-bottom: 0.25rem;
      position: relative;
      font-family: "Allnce-Neue-Regular", Arial, Helvetica, sans-serif;
    }
    .emailInput {
      width: 100%;
      height: 100%;
      background: unset;
      border: unset;

      font-family: "Allnce-Neue-Regular", Arial, Helvetica, sans-serif;
      font-size: 20px;
      font-weight: 100;
      ::placeholder {
        font-family: "Allnce-Neue-Regular", Arial, Helvetica, sans-serif;
        color: var(--color-green-light);
        font-size: 20px;
        font-weight: 100;
        line-height: 115%;
      }
      color: var(--color-green-light);
    }
  }

  @media (max-width: 1500px) {
    #mc_embed_signup h6 {
      max-width: 50%;
      font-size: 17px;
    }
    .inputContainer {
      padding-top: 4rem;
    }
  }

  @media (max-width: 1280px) {
    #mc_embed_signup {
      padding: 3rem 4rem;
      border-radius: 20px;
    }
  }
  @media (max-width: 992px) {
    .inputContainer {
      width: 80%;
    }
  }
  @media (max-width: 768px) {
    #mc_embed_signup h6 {
      max-width: 100%;
    }
    .inputContainer {
      width: 100%;
    }
  }
  @media (max-width: 576px) {
    #mc_embed_signup {
      margin-top: 5rem;
      border-radius: 15px;
      padding: 4rem 2rem;
      padding-top: 3rem;
      h1 {
        margin-bottom: 1rem;
      }
      h6 {
        font-size: 14px;
      }
    }
    .emailInput {
      width: 90%;
    }
    .inputContainer {
      padding-top: 7rem;
      .subscribeButtonWrapper {
        width: 33px;
        height: 33px;
      }
      .emailInput {
        font-size: 16px;
        ::placeholder {
          font-size: 16px;
        }
      }
      .textInputWrapper {
        width: 90%;
        height: 40px;
      }
    }
    .crustaceanWrapper {
      top: 45%;
      right: 0;
      width: 90%;
      max-width: unset;
    }
  }
</style>
